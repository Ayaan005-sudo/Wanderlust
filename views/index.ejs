<div class="tax-toogle ">
  <button>
    <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display taxes</label>
  </button>
  
</div>
</div>
</div>

  
  <div class="container mt-4">
    <div class="row justify-cotent-start row-cols-lg-3 row-cols-md-2  row-cols-sm-1" >
      <%for(list of lists){%>
        <a href="/listings/<%=list._id%>" class="listing-link">
          <div class="card col listing-card" style="width: 18rem; ">
            <%for(image of list.image){%>
                <img src="<%=image.url%>" class="card-img-top" alt="listings.img" style="height: 20rem;">
            <%}%>
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%=list.title%></b><br>
                  
                &#8377;<%= list.price ? list.price.toLocaleString("en-IN") : "Price not available" %>/night
                <i class="tax-info"> &nbsp &nbsp +18% GST</i>        
              </p>
            </div>
          </div>
        </a>
        
          <%}%>
    </div>
  </div>
    







     
    
        
          


    
